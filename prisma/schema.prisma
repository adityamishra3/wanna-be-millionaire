datasource db {
    provider = "sqlite"
}

generator client {
    provider = "prisma-client"
    output = "./generated"
}

model User {
    id Int @id @default(autoincrement())
    name String?
    email String @unique
    role Role @default(USER)
    posts Post[]
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
}

model Post {
    id Int @id @default(autoincrement())
    title String
    content String?
    author User @relation(fields: [authorId], references: [id])
    authorId Int
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
}

enum Role {
    USER
    ADMIN
}